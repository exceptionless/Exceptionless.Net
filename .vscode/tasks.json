{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "Exceptionless.Net.NonWindows.sln"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run Tests",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "test",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "Exceptionless.Net.NonWindows.sln"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
